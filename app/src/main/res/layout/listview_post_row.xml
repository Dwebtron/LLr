<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/padding_side"
    android:paddingLeft="@dimen/padding_side"
    android:paddingBottom="@dimen/padding_top">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_username"
        android:background="@color/dark_grey"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:id="@+id/post_message"
        android:layout_below="@id/post_username"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_signature"
        android:layout_below="@id/post_message"
        android:textColor="@color/red"/>
</RelativeLayout>